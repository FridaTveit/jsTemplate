{
    "name": "jsTemplate",
    "version": "1.0.0",
    "description": "Template for javascript projects",
    "main": "src/index.js",
    "scripts": {
        "start": "npm run build && node build/bundle.js",
        "build": "webpack -d",
        "test": "jest",
        "lint": "eslint src"
    },
    "jest": {
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js?)$",
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    },
    "author": "fjt",
    "devDependencies": {
        "babel-jest": "^23.4.0",
        "babel-loader": "^7.1.5",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "eslint": "^5.2.0",
        "jest": "^23.4.1",
        "webpack": "^4.16.2",
        "webpack-cli": "^3.1.0"
    }
}
